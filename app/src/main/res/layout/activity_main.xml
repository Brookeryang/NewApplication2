<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context="com.example.yyh.newapplication.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="Onnext"
            android:text="跳转到详情" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showDialog"
            android:text="自定义的Dialog" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="SpannableString"
            android:text="TextSpannableString" />

        <com.suke.widget.SwitchButton
            android:id="@+id/switc_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp" />

        <Button
            android:id="@+id/but_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="滚轮选择控件" />

        <Button
            android:id="@+id/but_select_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="支持自定义样式款仿iOS的PickerView控件" />

        <Button
            android:id="@+id/but_updata_apk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="版本检测更新" />

        <Button
            android:id="@+id/but_but_refresh_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="刷新控件" />

        <Button
            android:id="@+id/but_ver_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="验证码" />

        <Button
            android:id="@+id/but_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="好看的登陆" />

        <Button
            android:id="@+id/but_http"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Http" />

        <Button
            android:id="@+id/but_tips_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="定制你的输入法软键盘右下角|Tips" />

        <Button
            android:id="@+id/but_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="常用的Dialog" />

        <Button
            android:id="@+id/but_action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="沉浸式状态栏+ScrollView顶部伸缩+ActionBar渐变" />

        <Button
            android:id="@+id/but_rx_bus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RxBus" />
    </LinearLayout>
</ScrollView>
